@page "/"
@using MudBlazor
@using PaintMixer.Components.ColorMixer
@inject NavigationManager navigationManager

<h2 class="p-3">Welcome to Paint Mixer!</h2>

<div class="container-fluid">
	<div class="row">
		<div class="col-12 col-sm-6 col-md-5 col-lg-4 mb-2">

			<MixerWithSlider></MixerWithSlider>

		</div>
		<div class="col-12 col-sm-6 col-md-5 col-lg-4 mb-2">

			<CancelJob></CancelJob>

			<MudPaper Class="pa-4 mt-4" Elevation="4">

				<MudCard>
					<MudCardContent>
						<img class="float-end w-25" src="/swagger.png"  />
						<MudText><div class="h4 fw-normal"><i class="fa-solid fa-circle-info text-success"></i> API Endpoints</div></MudText>
						
						<MudText Typo="Typo.body2">The full set of API Endpoints are described and ready to use in the link below.</MudText>
					</MudCardContent>
					<MudCardActions>
						<MudButton Variant="Variant.Text" Color="Color.Success" Target="_blank" Href="@(navigationManager.BaseUri + "swagger")">@(navigationManager.BaseUri)swagger</MudButton>
					</MudCardActions>
				</MudCard>

			</MudPaper>

		</div>
		<div class="col-12 col-sm-6 col-md-5 col-lg-4 mb-2">

			<JobStatus></JobStatus>

		</div>		

	</div>
</div>

